@{
    ViewData["Title"] = "About";
}



@{
    <input type="button" class="btn btn-primary" value="+" onclick="fonte('a');" />
    <input type="button" class="btn btn-primary" value="-" onclick="fonte('b');" />
    <input type="hidden" id="backup" />
}




<div id="conteudo" style="font-size: 15px;">
    <h2>
        Sobre a Empresa
    </h2>



    <p>A SolutionTI atua no ramo de prestação de serviços em help desk, facilitando a resolução do seu problema , relacionado aos equipamentos e sistemas de informática. Conta com uma equipe qualificada e muito bem treinada, para atender de forma rápida e eficiente todos os nossos clientes e parceiros.</p>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


    <script type="text/javascript">

        /* Função para acessibilidade */
        function fonte(e) {

            var elemento = document.getElementById("conteudo");// Recebendo o Id da div
            var atual = elemento.style.fontSize; // identificando a fonte



            if (e == 'a') {

                atual = parseInt(atual) + 15 + 'px'; // Calculo de tamanho de fonte
            } else if (e == 'b') {
                atual = parseInt(atual) - 15 + 'px';

            } else if (e == 'c') {
                elemento.style.fontSize = atual;

            }
            elemento.style.fontSize = atual;

        }


    </script>













}
