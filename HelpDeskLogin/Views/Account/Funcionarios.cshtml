@model IEnumerable<HelpDeskLogin.Models.Funcionario>

@{
    ViewData["Title"] = "Funcionarios";
}

<h2>Funcionarios</h2>

<p>
    <a asp-action="CreateFuncionario">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.GrupoId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PessoaId)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GrupoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PessoaId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdFuncionario">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdFuncionario">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdFuncionario">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
